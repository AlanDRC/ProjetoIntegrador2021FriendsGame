@{
    ViewData["Title"] = "Home Page";
}
@model PROJETO01.Modelos.usuario


<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <style>
        body {
            background: #4F4F4F;
        }

        #buscarPlayer {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
        }

            #buscarPlayer .TextBuscar {
                color: azure;
            }

        .card {
            background-color: rgba(19, 19, 19, 0.3);
            padding: 80px;
            border-radius: 2px;
            width: 500px;
        }
    </style>
</head>
<body>
    

    <div id="buscarPlayer">
        <form class="card">
            <h3 class="TextBuscar">Para buscar jogadores clique a abaixo</h3>
            <button asp-controller="usuario" asp-action="Listar" usuario class="btn btn-secondary">Buscar Jogador</button>
        </form>
    </div>
</body>