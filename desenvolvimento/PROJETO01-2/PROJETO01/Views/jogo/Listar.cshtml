@model List<PROJETO01.Modelos.jogo>

<h3>
    CADASTRO DE TIPOS DE JOGOS 
    <a class="btn btn-sm btn-primary float-right" href="/Jogo/Adicionar">
        + ADICIONAR
    </a>
</h3>

<table class="table table-hover ">
    <thead>
        <tr>
            <th>Codigo do jogo</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.codJogo</td>
                <td>@item.nomeDoJogo</td>
                <td>
                    <a href="/Jogo/Editar?codJogo=@item.codJogo" class="btn btn-sm btn-warning">
                        Editar
                    </a>
                    <a href="/Jogo/Excluir?codJogo=@item.codJogo" class="btn btn-sm btn-danger">
                        Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
